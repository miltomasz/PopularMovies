<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/row_min_height"
    android:orientation="horizontal"
    tools:context="com.plumya.popularmovies.MovieDetailActivity">

    <ImageView
        android:id="@+id/trailer_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/trailers_item_margin"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/trailer_name"
        tools:text="Test name"
        android:textSize="@dimen/activity_detail_text_size"
        android:layout_margin="@dimen/trailers_item_margin"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>